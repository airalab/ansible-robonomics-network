[Unit]
Description=robonomics
After=network.target

[Service]
User={{ SERVICE_NAME }}
Group={{ SERVICE_NAME }}
Type=simple
Restart=on-failure

ExecStart=/usr/local/bin/robonomics --parachain-id {{ PARACHAIN_ID }} {% if CUSTOM_SPEC == true %} --chain {{ USER_PATH }}/spec.json {% endif %} --name "{{ HOSTNAME }}" --validator --lighthouse-account "{{ LIGHTHOUSE_ACCOUNT }}" --telemetry-url "{{ TELEMETRY_URL }}" --in-peers 500 --out-peers 500 --no-mdns --port 30333 --execution Wasm --prometheus-port 9615 -- --execution Wasm --in-peers 500 --out-peers 500 --port 30334 --prometheus-port 9616

[Install]
WantedBy=multi-user.target